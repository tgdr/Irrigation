<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >



            <TextView
                android:id="@+id/tv_cityName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"

                android:gravity="center"


                />

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="24"
                android:textColor="@color/ColorText"
                android:textSize="78sp"
                />

            <TextView
                android:id="@+id/tv_minTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text="24"
                android:textColor="@color/ColorText"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/tv_maxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_minTemp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="131dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text="24lx"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_temyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_humyz"
                android:layout_alignRight="@+id/tv_lightyz"
                android:layout_alignTop="@+id/tv_minTemp"
                android:text="N/A"
                android:textColor="@color/ColorText"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_humyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_temyz"
                android:text="N/A"
                android:textColor="@color/ColorText"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_lightyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_humyz"
                android:text="N/A"
                android:textColor="@color/ColorText"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_soilhumyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_lightyz"
                android:text="N/A"
                android:textColor="@color/ColorText"
                android:textSize="16sp"/>

            <ImageView
                android:alpha="0.6"
                android:id="@+id/iv_weatherIcon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_below="@+id/tv_temp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_weather_sunny"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cityName"
                android:layout_toEndOf="@+id/tv_waterBox_num"
                android:layout_toRightOf="@+id/tv_waterBox_num"
                android:src="@drawable/ic_temp"/>

            <TextView
                android:id="@+id/tv_waterBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/shuiliang"
                android:drawableStart="@drawable/shuiliang"
                android:text="水箱"
                android:textColor="@color/ColorText"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/tv_moisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView2"
                android:drawableLeft="@drawable/ic_shidu"
                android:drawableStart="@drawable/ic_shidu"
                android:text="土壤湿度"
                android:textColor="@color/ColorText"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_waterBox_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_waterBox"
                android:layout_marginLeft="6dp"
                android:text="水量充足"
                android:textColor="@color/ColorText"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/tv_moisture_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_moisture"
                android:layout_alignStart="@+id/tv_moisture"
                android:layout_below="@+id/tv_moisture"
                android:layout_marginLeft="20dp"
                android:text="24"
                android:textColor="@color/ColorText"
                android:textSize="48sp"/>



            <ImageView
                android:id="@+id/iv_plant"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/flower1"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="24dp"
                android:layout_toEndOf="@+id/tv_cityName"
                android:layout_toRightOf="@+id/tv_cityName"
                android:src="@drawable/line"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView2"
                android:layout_toLeftOf="@+id/tv_cityName"
                android:layout_toStartOf="@+id/tv_cityName"
                android:src="@drawable/line"
                />

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
