                    <!--                        <TextView-->
                    <!--                            android:id="@+id/tv_card_course_time"-->
                    <!--                            android:layout_marginTop="3dp"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="08:00-9:30"-->
                    <!--                            android:layout_marginLeft="10dp"-->

                    <!--                            android:textSize="15dp" />-->

                    <!--                        <TextView-->
                    <!--                            android:id="@+id/tv_card_course_position"-->
                    <!--                            android:textSize="15dp"-->
                    <!--                            android:gravity="bottom"-->
                    <!--                            android:layout_marginLeft="15dp"-->
                    <!--                            android:layout_gravity="bottom"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="综合实训楼7A-7005" />-->

                    <!--                    </LinearLayout>-->

                </FrameLayout>
            <lty.buu.irrigation.defui.SpannableFoldTextView
                android:id="@+id/tv_card_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textColor="#000"
                app:showMaxLine="4"
                app:showTipAfterExpand="true"
                app:tipClickable="true"
                app:tipColor="@color/colorPrimary"
                app:tipGravity="1"
                />
            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>